[user]
    email = christian.wygoda@wygoda.net
    name = Christian Wygoda

[alias]
    st = status
    co = checkout
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    t = tag --sort=-creatordate

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoSquash = true

[fetch]
    prune = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
